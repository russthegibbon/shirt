<Configuration status="debug">
    <Appenders>
        <File name="file-log" fileName="logging.out" append="false">
            <PatternLayout>
                <pattern>%level{length=1}-%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %C - %msg%n</pattern>
            </PatternLayout>
        </File>

    </Appenders>
    <Loggers>
        <Logger name="com.peppermintspencer" level="debug" additivity="false">
            <appender-ref ref="file-log" level="debug"/>
        </Logger>
    </Loggers>
</Configuration>